<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_service_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.soros.androidstudynotes.service.ServiceStudyActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/service_lifecycle"
            android:id="@+id/imageView" />


        <Button
            android:id="@+id/startServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:onClick="onStartService"
            android:text="startService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stopServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/startServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onStopService"
            android:text="stopService"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/space0"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/stopServiceBtn"
            android:background="#00ffff"/>

        <Button
            android:id="@+id/bindServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space0"
            android:layout_marginTop="16dp"
            android:onClick="onBindService"
            android:text="bindService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/unbindServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bindServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onUnbindService"
            android:text="unbindService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/callServiceMethodBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/unbindServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onCallServiceMethod"
            android:text="callServiceMethod"
            android:textAllCaps="false" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/space"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/callServiceMethodBtn"
            android:background="#00ff00"/>

        <TextView
            android:text="@string/service_life_cycle_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lifeCycleText"
            android:background="#cfd8dc"
            android:layout_below="@+id/space"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/startLifeCycleServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lifeCycleText"
            android:layout_marginTop="16dp"
            android:onClick="onStartLifeCycleService"
            android:text="startLifeCycleService"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/stopLifeCycleServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/startLifeCycleServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onStopLifeCycleService"
            android:text="stopLifeCycleService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bindLifeCycleServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stopLifeCycleServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onBindLifeCycleService"
            android:text="bindLifeCycleService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/unbindLifeCycleServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bindLifeCycleServiceBtn"
            android:layout_marginTop="16dp"
            android:onClick="onUnbindLifeCycleService"
            android:text="unbindLifeCycleService"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/space2"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/unbindLifeCycleServiceBtn"
            android:background="#00ffff"/>

        <Button
            android:id="@+id/startIntentServiceFoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space2"
            android:layout_marginTop="16dp"
            android:onClick="onStartIntentServiceFoo"
            android:text="startIntentServiceFoo"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/startIntentServiceBaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/startIntentServiceFoo"
            android:layout_marginTop="16dp"
            android:onClick="onStartIntentServiceBaz"
            android:text="startIntentServiceBaz"
            android:textAllCaps="false" />
    </RelativeLayout>
</ScrollView>