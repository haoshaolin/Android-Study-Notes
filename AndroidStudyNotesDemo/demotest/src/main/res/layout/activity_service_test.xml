<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_service_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soros.demotest.ServiceTestActivity">

    <Button
        android:text="callRemoteMessengerService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/callMessenger"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="callRemoteMessengerService"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/callMessenger"
        android:background="#662211"/>
    <Button
        android:id="@+id/bindRemoteService"
        android:layout_below="@+id/divider"
        android:layout_marginTop="16dp"
        android:text="bindRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="bindRemoteService"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/unbindRemoteService"
        android:layout_below="@+id/bindRemoteService"
        android:layout_marginTop="16dp"
        android:text="unbindRemoteService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="unbindRemoteService"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/syncCallThreadSleep"
        android:layout_below="@+id/unbindRemoteService"
        android:layout_marginTop="16dp"
        android:text="syncCallThreadSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="syncCallThreadSleep"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/asynCallThreadSleep"
        android:layout_below="@+id/syncCallThreadSleep"
        android:layout_marginTop="16dp"
        android:text="asynCallThreadSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="asyncCallThreadSleep"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/add"
        android:layout_below="@+id/asynCallThreadSleep"
        android:layout_marginTop="16dp"
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:onClick="add"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
