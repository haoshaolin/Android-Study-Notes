<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soros.demotest.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="@string/app_des"
        android:textColor="#a91d11"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Activity Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#9f3131"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:onClick="onActivityTest"
        android:textAllCaps="false"
        android:id="@+id/activityTestBtn" />

    <Button
        android:text="Service Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityTestBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/serviceTestBtn"
        android:textColor="#ffffff"
        android:onClick="serviceTest"
        android:background="#8abf1f"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serviceTestBtn"
        android:layout_marginTop="16dp"
        android:id="@+id/singleTaskBtn"
        android:textColor="#ffffff"
        android:background="#6626a9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:textAllCaps="false"
        android:layout_alignParentStart="true" />

    <Button
        android:text="other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singleTaskBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:background="#12bcab"
        android:id="@+id/singleInstanceBtn"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
